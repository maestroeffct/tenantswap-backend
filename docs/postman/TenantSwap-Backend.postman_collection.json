            "description": "Create active listing.",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"desiredType\": \"2-Bedroom Apartment\",\n  \"desiredCity\": \"Lagos\",\n  \"maxBudget\": 2500000,\n  \"timeline\": \"Within 2 months\",\n  \"currentType\": \"1-Bedroom Apartment\",\n  \"currentCity\": \"Abuja\",\n  \"currentRent\": 1800000,\n  \"availableOn\": \"2026-03-15\",\n  \"features\": [\"parking\", \"balcony\", \"security\"]\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let data = {};",
                  "try { data = pm.response.json(); } catch (e) {}",
                  "if (data.listing && data.listing.id) {",
                  "  pm.collectionVariables.set('listingId', data.listing.id);",
                  "  if (!pm.collectionVariables.get('requesterListingId')) pm.collectionVariables.set('requesterListingId', data.listing.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "GET /listings/me",
          "request": {
            "method": "GET",
            "header": [],
